<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/preview"
        android:layout_width="206.5dp"
        android:layout_height="276dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="116.7dp"
        android:layout_height="156dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/border1"
        android:contentDescription="apple1"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="116.7dp"
        android:layout_height="156dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/border1"
        android:contentDescription="apple2"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView1"
        app:layout_constraintTop_toTopOf="@+id/imageView1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="116.7dp"
        android:layout_height="156dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/border1"
        android:contentDescription="apple3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="116.7dp"
        android:layout_height="116.7dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border1"
        android:contentDescription="WhiteBoard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Reflectance1" />

    <ImageView
        android:id="@+id/rect4"
        android:layout_width="77.8dp"
        android:layout_height="19.45dp"
        android:background="@drawable/border1"
        android:contentDescription="WhiteBoard"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/rect5"
        android:layout_width="27.23dp"
        android:layout_height="35.01dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/border1"
        android:contentDescription="WhiteBoard"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/rect3"
        android:layout_width="19.45dp"
        android:layout_height="77.8dp"
        android:background="@drawable/border1"
        android:contentDescription="WhiteBoard"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/rect4"
        app:layout_constraintVertical_bias="0.512" />

    <ImageView
        android:id="@+id/rect2"
        android:layout_width="19.45dp"
        android:layout_height="77.8dp"
        android:background="@drawable/border1"
        android:contentDescription="WhiteBoard"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/rect4"
        app:layout_constraintVertical_bias="0.512" />

    <ImageView
        android:id="@+id/rect"
        android:layout_width="77.8dp"
        android:layout_height="19.45dp"
        android:background="@drawable/border1"
        android:contentDescription="WhiteBoard"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/rect6"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="121dp"
        android:background="@drawable/border1"
        android:contentDescription="WhiteBoard"
        app:layout_constraintStart_toStartOf="@+id/preview"
        app:layout_constraintTop_toTopOf="@+id/preview" />

    <ImageView
        android:id="@+id/rect7"
        android:layout_width="19dp"
        android:layout_height="25dp"
        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/border1"
        android:contentDescription="WhiteBoard"
        app:layout_constraintStart_toStartOf="@+id/preview"
        app:layout_constraintTop_toTopOf="@+id/preview" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="4dp"
        android:text="照片编号:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/preview"
        app:layout_constraintTop_toBottomOf="@+id/preview" />

    <TextView
        android:id="@+id/text_number"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:onClick="EditCode"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/Reflectance1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:text="未知"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView1" />

    <TextView
        android:id="@+id/Reflectance2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="未知"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/Reflectance3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="未知"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/Zero"
        android:layout_width="86dp"
        android:layout_height="44dp"
        android:layout_marginBottom="4dp"
        android:onClick="ReturnZero"
        android:text="归零"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/Subtract" />

    <Button
        android:id="@+id/Add"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:onClick="ReturnZero"
        android:text="+1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Subtract"
        app:layout_constraintStart_toEndOf="@+id/preview" />

    <Button
        android:id="@+id/Subtract"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:onClick="ReturnZero"
        android:text="-1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Zero"
        app:layout_constraintStart_toStartOf="@+id/Add" />

    <TextView
        android:id="@+id/SSC"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="13.88"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/ssc_calculate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ssc_calculate"
        app:layout_constraintTop_toTopOf="@+id/ssc_calculate" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="28dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/SpinnerText"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/SpinnerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="苹果种类："
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ssc_calculate"
        app:layout_constraintStart_toStartOf="@+id/AppleNumberTextView" />

    <Button
        android:id="@+id/Apple_Subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:onClick="Which_apple"
        android:text="-1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/ssc_calculate"
        android:layout_width="127dp"
        android:layout_height="51dp"
        android:onClick="SSC_calculate"
        android:text="计算糖度"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="@+id/button4"
        app:layout_constraintStart_toStartOf="@+id/button5" />

    <Button
        android:id="@+id/Apple_Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:onClick="Which_apple"
        android:text="+1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/Apple_Subtract"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="releaseLamp"
        android:text="关灯"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Apple_Subtract"
        app:layout_constraintEnd_toEndOf="@+id/Apple_Subtract" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:onClick="capture"
        android:text="拍摄"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Apple_Subtract"
        app:layout_constraintStart_toStartOf="@+id/Apple_Add" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="OpenLamp"
        android:text="开灯"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/button4"
        app:layout_constraintStart_toStartOf="@+id/Apple_Add" />

    <TextView
        android:id="@+id/AppleNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="苹果编号：0"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/ssc_calculate"
        app:layout_constraintTop_toBottomOf="@+id/Reflectance2" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="Show_sugar"
        android:text="历次测量值"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>